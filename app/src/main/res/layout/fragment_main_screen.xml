<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6DEDE"
    tools:context=".main_screen">

    <Button
        android:id="@+id/take_pictures"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="130dp"
        android:layout_marginTop="250sp"
        android:backgroundTint="#97B3A2"
        android:text="Take Pictures "
        android:textSize="25dp"></Button>

    <Button
        android:id="@+id/my_collection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="130dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="#97B3A2"
        android:text="My collection "
        android:textSize="25sp"></Button>


</FrameLayout>