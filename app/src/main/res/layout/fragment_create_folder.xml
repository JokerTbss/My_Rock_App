<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6DEDE"
    tools:context=".CreateFolder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E6DEDE"
        tools:context=".CreateFolder">

        <Button
            android:id="@+id/back_icon1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#97B3A2"
            android:hint="name"
            android:textColor="@color/black"
            android:text="back"></Button>

        <TextView
            android:id="@+id/my_collection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="NEW FOLDER"
            android:textColor="#938A8A"
            android:textSize="25sp"></TextView>

        <Button
            android:id="@+id/done_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="#97B3A2"
            android:text="DONE"
            android:textColor="@color/black"></Button>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_centerInParent="true"
        android:background="@drawable/border">

        <EditText
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="100dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            tools:ignore="SpeakableTextPresentCheck"></EditText>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="31dp"

            android:gravity="center"
            android:text="Enter folder name"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="20sp"></TextView>
    </RelativeLayout>


</RelativeLayout>