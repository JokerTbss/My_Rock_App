<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCollection"
    android:background="@drawable/rockbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E6DEDE"
        android:orientation="horizontal">


        <Button
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:backgroundTint="#404542"
            android:text="back"></Button>

        <TextView
            android:id="@+id/my_collection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="MY COLLECTION"
            android:textColor="#716666"
            android:textSize="15sp"></TextView>

        <Button
            android:id="@+id/prop_icon"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:backgroundTint="#8B918E"
            android:text="Rock_properties"
            android:layout_marginLeft="20dp"></Button>

    </LinearLayout>

    <ImageView
        android:id="@+id/listentry_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>

    <TextView
        android:id="@+id/listentry_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"/>



</LinearLayout>
