<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCollection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00515151"
        android:orientation="horizontal">


        <Button
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="back"
            android:textColor="@color/white"></Button>

        <TextView
            android:id="@+id/my_collection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="MY COLLECTION"
            android:textColor="#716666"
            android:textSize="15sp"></TextView>

        <Button
            android:id="@+id/add_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/border"
            android:backgroundTint="#2A656766"
            android:text="add"
            android:textColor="@color/white"></Button>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_folder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rockbackground" />



</LinearLayout>

