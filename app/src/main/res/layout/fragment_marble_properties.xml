<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rockbackground">

        <TextView
            android:id="@+id/textView"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="Marble  "
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="222dp"
            android:layout_height="206dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/border_description"
            android:ems="10"
            android:gravity="top|center"
            android:inputType="textMultiLine"

            android:text="\n descriprion\n  "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/editTextTextMultiLine2"
            android:layout_width="347dp"
            android:layout_height="319dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:text="                       Physical properties
            \n\nTexture:             Granoblastic,granular
            \nColour:               White,pink
            \nDerived:              Limestone, dolomite
            \nGrain size:          medium grained
            \nHardness:          hard
            \nStructure:           Massive
            \nGroup:                Metamorphic Rocks
            \nFormation:           Regional /
            \n                           contact metamorphic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

        <EditText
            android:id="@+id/editTextTextMultiLine3"
            android:layout_width="226dp"
            android:layout_height="113dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="composition "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine2" />

        <EditText
            android:id="@+id/editTextTextMultiLine4"
            android:layout_width="209dp"
            android:layout_height="62dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="chemical properties"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine3" />

        <Button
            android:id="@+id/button"
            android:layout_width="82dp"
            android:layout_height="44dp"
            android:background="@drawable/border"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
